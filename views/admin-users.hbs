<main>
    <!--
    Δε νομίζω να χρειάζεται οι admin να προσθέτουν χρήστες
    <form method="GET" action="/users/add">
        <fieldset>
            <legend>Προσθήκη χρήστη</legend>
            <button type="submit">New User</button>
        </fieldset>
    </form>
    -->
    <div id="existing-users-list">
        <a href="/admin" class="return">Επιστροφή</a><br>
        <table class="dashboard-table">
            <tr>
                <th>Username</th>
                <th>Password Hash</th>
                <th>eMail</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>isAdmin</th>
                <th>REMOVE</th>
            </tr>
            {{#each users}}
            <tr class="user-list-item">
                <td>{{username}}</td>
                <td>{{password}}</td>
                <td>{{email}}</td>
                <td>{{first_name}}</td>
                <td>{{last_name}}</td>
                <td>{{phone}}</td>
                <td>{{address}}</td>
                <td>{{!-- <a href="/user/remove/{{username}}">X</a> --}}</td>
                <td></td>
            </tr>
            {{/each}}
        </table>
    </div>
</main>